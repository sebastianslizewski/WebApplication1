@model Card

<h2>@Model.CardName</h2>

<div class="thumbnail">
    <img alt="@Model.CardName" src="@Model.CardImgUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.CardPrice.ToString("c")</h3>
        <h3>
            <a href="#">@Model.CardName</a>
        </h3>
        <h4>@Model.CardShortDescription</h4>
        <p>@Model.CardLongDescription</p>
    </div>
</div>