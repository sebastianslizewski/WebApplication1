@model Card
<div class="container-fluid">
    <h2>@Model.CardName</h2>
    <div class="container-fluid">
        <div class="portrait">
            <img alt="@Model.CardName" src="@Model.CardImgUrl">
            <div class="caption-full">
                <h2 class="pull-right">@Model.CardPrice.ToString("c")</h2>
                <h2>
                    <a href="#">@Model.CardName</a>
                </h2>
                <h4>@Model.CardShortDescription</h4>
                <p>@Model.CardLongDescription</p>
                <p class="button">
                    <a class="btn btn-primary"
                       asp-controller="ShoppingCart"
                       asp-action="AddToShoppingCart"
                       asp-route-cardId="@Model.CardId">Add to cart</a>
                </p>
            </div>
        </div>
    </div>
</div>
