@model Card

    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@Model.CardImgThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@Model.CardPrice.ToString("c")</h3>
                <h3>
                    <a asp-controller="Card" asp-action="Details" asp-route-id="@Model.CardId">@Model.CardName</a>
                </h3>
                <p>@Model.CardShortDescription</p>
            </div>
        </div>
    </div>
